{
  "name": "monetra",
  "version": "1.0.1",
  "description": "A currency-aware, integer-based money engine designed for financial correctness.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "lint": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "money",
    "currency",
    "financial",
    "integer",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zugobite/monetra.git"
  },
  "bugs": {
    "url": "https://github.com/zugobite/monetra/issues"
  },
  "homepage": "https://github.com/zugobite/monetra#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.3.0",
    "tsup": "^8.0.0",
    "vitest": "^1.0.0",
    "prettier": "^3.0.0",
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
