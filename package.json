{
  "name": "monetra",
  "version": "2.2.1",
  "description": "A comprehensive TypeScript framework for financial applicationsâ€”featuring integer-based money handling, multi-currency support, transaction ledgers, and advanced financial calculations. Built for correctness, auditability, and zero dependencies.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./ledger": {
      "types": "./dist/ledger/index.d.ts",
      "import": "./dist/ledger/index.mjs",
      "require": "./dist/ledger/index.js"
    },
    "./financial": {
      "types": "./dist/financial/index.d.ts",
      "import": "./dist/financial/index.mjs",
      "require": "./dist/financial/index.js"
    },
    "./tokens": {
      "types": "./dist/tokens/index.d.ts",
      "import": "./dist/tokens/index.mjs",
      "require": "./dist/tokens/index.js"
    }
  },
  "scripts": {
    "build": "tsup && tsc --emitDeclarationOnly --outDir dist",
    "test": "vitest --run",
    "test:property": "vitest --run tests/money/PropertyBased.test.ts",
    "test:mutation": "stryker run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "bench": "vitest bench",
    "bench:report": "node scripts/benchmark.mjs",
    "lint": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "pnpm run build"
  },
  "packageManager": "pnpm@9.15.4",
  "keywords": [
    "money",
    "currency",
    "financial",
    "framework",
    "ledger",
    "accounting",
    "typescript",
    "fintech",
    "integer-arithmetic",
    "bigint",
    "crypto",
    "defi"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zugobite/monetra.git"
  },
  "bugs": {
    "url": "https://github.com/zugobite/monetra/issues"
  },
  "homepage": "https://github.com/zugobite/monetra#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "author": "Zascia Hugo",
  "license": "MIT",
  "devDependencies": {
    "@stryker-mutator/api": "~9.5.1",
    "@stryker-mutator/core": "~9.5.1",
    "@stryker-mutator/vitest-runner": "~9.5.1",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "4.0.18",
    "fast-check": "^4.5.3",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "vitest": "~4.0.16",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18"
  }
}